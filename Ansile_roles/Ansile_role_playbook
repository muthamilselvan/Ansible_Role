  become: yes
  roles:
    - role: {{role_name}}	



Loops :

---
  - hosts: samplenode1
    become: yes
    tasks:
      - apt:
         name: git
         state: present
      - apt:
         name: tree
         state: present
      - apt:
         name: vim
         state: present


Loops :::

---
  - hosts: samplenode1
    gather_facts: false
    become: yes
    tasks:
      - apt:
         name: "{{item}}"
         state: absent
        loop:
          - git
          - tree
          - vim
 
 ---
  - hosts: samplenode1
    #gather_facts: false
    become: yes
    tasks:
      - name: Install-httpd
        apt:
          name: httpd
          state: present
        notify:
        - start-httpd
    handlers:
    - name: start-httpd
      service:
          name: httpd
          state: started

---
  - hosts: samplenode1
    #gather_facts: false
    become: yes
